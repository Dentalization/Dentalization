# PostgreSQL Configuration (Structured Data)
DATABASE_URL="postgresql://username:password@localhost:5432/dentalization_dev"
DIRECT_URL="postgresql://username:password@localhost:5432/dentalization_dev"

# MongoDB Configuration (Dental Records)
MONGODB_URI="mongodb://localhost:27017/dentalization_records"

# Vector Database Configuration (Image Embeddings)
# Option 1: Pinecone (Managed)
PINECONE_API_KEY="your-pinecone-api-key"
PINECONE_ENVIRONMENT="us-west1-gcp-free"
PINECONE_INDEX="dental-images"

# Option 2: Qdrant (Self-hosted)
QDRANT_URL="http://localhost:6333"
QDRANT_API_KEY="your-qdrant-api-key"

# Option 3: Weaviate (Self-hosted)
WEAVIATE_URL="http://localhost:8080"
WEAVIATE_API_KEY="your-weaviate-api-key"

# JWT & Security
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_REFRESH_SECRET="your-refresh-token-secret"

# App Environment
NODE_ENV="development"

# File Storage
UPLOAD_PATH="./uploads"
MAX_FILE_SIZE="10485760"  # 10MB

# Image Processing
OPENAI_API_KEY="your-openai-api-key"  # For image analysis
HUGGINGFACE_API_KEY="your-huggingface-api-key"  # Alternative for embeddings
